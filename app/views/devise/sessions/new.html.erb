<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, class:"form-control",autofocus: true, autocomplete: "email", placeholder:"Email" %>
  </div>
  <br>
  <div class="field form-group">
    <%= f.password_field :password, class:"form-control",autocomplete: "current-password", placeholder:"Password" %>
  </div>
    <br>
  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me %>
    </div>
      <br>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", class:"btn btn-outline-secondary" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
